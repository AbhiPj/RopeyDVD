@model RopeyDVD.Models.ViewModels.AddDVDLoan

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (ViewBag.TotalPenalty != null)
{
    <script type="text/javascript">
        window.onload = function () {
        alert("@ViewBag.TotalPenalty");
        };
    </script>
}

<div class="admin-container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ReturnAdd">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 <div class="form-group">
                    <label asp-for="CopyNumber" class="control-label">DVD Copy Number</label>
                    <select asp-for="CopyNumber" class="form-select" asp-items="ViewBag.DVDList"></select> 
                    <span asp-validation-for="CopyNumber" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>
