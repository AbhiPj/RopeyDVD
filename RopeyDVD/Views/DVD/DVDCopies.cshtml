@model IEnumerable<RopeyDVD.Models.DVDCopy>

@{
    ViewData["Title"] = "DVDCopies";
}

<div class="admin-container">
    <h1>DVDCopies</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table" id="example">
        <thead>
            <tr>
                 <th>
                    @Html.DisplayNameFor(model => model.CopyNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DVDTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePurchased)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CopyNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DVDTitle.DVDNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePurchased)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CopyNumber">Edit</a> |
                        <a asp-action="DVDCopyLoan" asp-route-id="@item.CopyNumber">Previous loan</a> |
                        <a asp-action="Details" asp-route-id="@item.CopyNumber">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CopyNumber">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
    </table>
</div>
